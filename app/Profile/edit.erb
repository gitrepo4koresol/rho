<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @profile.name %></h1>
    <a href="<%= url_for :action => :show, :id => @profile.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @profile.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @profile.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="profile[name]" class="fieldLabel">Name</label>
            <input type="text" id="profile[name]" name="profile[name]" value="<%= @profile.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="profile[interest]" class="fieldLabel">Interest</label>
            <input type="text" id="profile[interest]" name="profile[interest]" value="<%= @profile.interest %>" <%= placeholder( "Interest" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
